# OpenSearch Connection
OPENSEARCH_HOST=host.docker.internal
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# Web App Port (what you access in browser)
WEB_PORT=8888

# Proxy Port (internal, usually leave as 3001)
PROXY_PORT=3001

# Admin Basic Auth (base64 takes precedence if set)
ADMIN_USER=admin
ADMIN_PASS=redhat
ADMIN_USER_B64=
ADMIN_PASS_B64=
DEFAULT_TEAM=core
AUTH_TOKEN_TTL_MINUTES=10
ADMIN_SESSION_TTL_MINUTES=5
VITE_ADMIN_SESSION_TTL_MINUTES=5

# App defaults
DEFAULT_INDEX_PATTERN=mains-*
DEFAULT_TIME_ZONE=UTC
MAX_EXPORT_SIZE=100000
DARK_MODE_DEFAULT=false

# Field explorer (optional)
FIELD_EXPLORER_FIELDS=service,level,host,env,logger,error_code
FIELD_EXPLORER_TOPN=5

# Proxy cache (in-memory)
CACHE_TTL_MS=15000
CACHE_MAX_ENTRIES=500
LOG_RETENTION_DAYS=7


# POC Import settings
IMPORT_UI_VISIBLE=false   # show/hide Log Import (POC) UI
IMPORT_ENABLED=false      # enable/disable import processing
IMPORT_MAX_FILE_BYTES=1gb   # mb or gb only
IMPORT_BATCH_SIZE=100mb  # mb or gb only
IMPORT_INDEX_RETENTION_ENABLED=true # auto-delete job for import-created indices is ON.
IMPORT_INDEX_RETENTION_DAYS=7

# Email alerts (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_TO=
ALERT_EMAIL_FROM=
